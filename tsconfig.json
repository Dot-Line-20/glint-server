{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "typeRoots": ["./src/customTypes", "./node_modules/@types"],
    "paths": {
      "@lib/*": ["./src/lib/*"]
    }
  },
  "exclude": ["./service-flow/**/*"], 
  "ts-node": {
    "files": true
  }
}