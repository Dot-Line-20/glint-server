{
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ES2021",
    "module": "CommonJS",
    "strict": true,
    "checkJs": true,
    "removeComments": true,
    "esModuleInterop": true,
    // "resolveJsonModule": true,
    "allowUnreachableCode": false,
    "experimentalDecorators": true,
    "importsNotUsedAsValues": "error",
    "typeRoots": ["src/types"]
  },
  "exclude": ["dist", "node_modules"],
  "ts-node": { "files": true }
}
